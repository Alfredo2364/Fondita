rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidImageSize() {
      return request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    
    // Dish images
    match /dishes/{dishId}/{allPaths=**} {
      allow read: if true; // Public read for menu images
      allow write: if isAdmin() && isValidImageType() && isValidImageSize();
    }
    
    // Category images
    match /categories/{categoryId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin() && isValidImageType() && isValidImageSize();
    }
    
    // QR codes for tables
    match /qr-codes/{tableId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // User profile images
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                     (isAdmin() || request.auth.uid == userId) &&
                     isValidImageType() && isValidImageSize();
    }
    
    // Receipts and documents
    match /receipts/{receiptId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
